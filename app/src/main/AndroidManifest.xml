<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.retreat.shebuel.spitraining">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.VideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />
        <activity android:name=".Activities.LanguageOptions" />
        <activity android:name=".Activities.MainOptionsMenu" />
        <activity
            android:name=".Activities.InstructionVideo"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />
        <activity android:name=".Activities.Profile" />
        <activity android:name=".Activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Sample" />
        <activity android:name=".Activities.ChangePassword2"></activity>
    </application>

</manifest>